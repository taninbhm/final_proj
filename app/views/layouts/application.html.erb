<!DOCTYPE html>
<html>
  <head>
    <title>ShoeChic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar is-black">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="#">Shoe Chic</a>
      </div>
      <div id="navMenu"  class="navbar-menu">
        <div class="navbar-end">
             <%= link_to "Home", root_path, class:"navbar-item text-underline" %>

              <div class="dropdown is-hoverable ">
              <div class="dropdown-trigger">
                <div class="navbar-item" aria-haspopup="true" aria-controls="dropdown-menu4">
                  <a class="menu-items text-underline">Categories</a>
                  <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </div>
              </div>
              <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                <div class="dropdown-content">

                <% @myCategories.each do |category| %>
                  <a href="#" class="dropdown-item">
                  <%= link_to category.name, category %>
                  </a>
                <% end %>

                </div>
                </div>
              </div>


            <% @myPages.each do |page| %>

              <%= link_to page.title, page ,  class:"navbar-item"%>

            <% end %>


          <% if user_signed_in? %>

           <%= link_to("Logout", destroy_user_session_path, method: :delete) %>

          <% else %>
             <%= link_to('Login', new_user_session_path, class:'navbar-item menu-items') %>

          <% end %>

          </div>
        </div>
      </div>
    </div>
  </nav>

  <p class="notice"><%= notice  %></p>
  <p class="alert"><%= alert  %></p>

    <%= yield %>
  </body>
</html>
