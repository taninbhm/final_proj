<!DOCTYPE html>
<html>
  <head>
    <title>ShoeChic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

  </head>

  <body>

  <nav class="navbar is-black">
    <div class="container">
      <div class="navbar-brand">
      <%= link_to "Shoe Chic", root_path, class:"text-underline", style:'margin-top:13px; color:white' %>
      </div>

      <div class="shooping-cart-logo">
        <i class="fas fa-shopping-cart" style="margin-top:19px;"></i><%= link_to @order_items.to_a.sum(&:quantity),
        cart_path, id: "shopping-cart-icon", class:"text-underline"%>
      </div>


      <div id="navMenu"  class="navbar-menu">
        <div class="navbar-end">
            <span class="icon" style="margin-top:14px;">
             <i class="fas fa-home"></i>
            </span>
              <%= link_to "Home", root_path, class:"navbar-item text-underline" , id:"home-hover"%>

              <div class="dropdown is-hoverable ">
              <div class="dropdown-trigger">
                  <div class="navbar-item" aria-haspopup="true" aria-controls="dropdown-menu4">
                    <a class="menu-items text-underline">Categories</a>
                    <span class="icon is-small">
                      <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                  </div>
              </div>


              <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                <div class="dropdown-content">

                <% @myCategories.each do |category| %>
                  <%= link_to category.name, category, class:"dropdown-item" %>
                <% end %>

                </div>
                </div>
              </div>


            <% @myPages.each do |page| %>

              <%= link_to page.title, page ,  class:"navbar-item"%>

            <% end %>


          <% if user_signed_in? %>

           <%= link_to("Logout", destroy_user_session_path, method: :delete) %>

          <% else %>
             <%= link_to('Login', new_user_session_path, class:'navbar-item menu-items') %>

          <% end %>

          </div>
        </div>
      </div>
    </div>
  </nav>
  <p class="notice"><%= notice  %></p>
  <p class="alert"><%= alert  %></p>

    <%= yield %>
  </body>
</html>
